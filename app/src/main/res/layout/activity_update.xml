<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UpdateActivity"
    android:background="@drawable/background">
    <EditText
        android:id="@+id/title"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_recyclerview"
        android:hint="Введите название заметки"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/description"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_recyclerview"
        android:hint="Введите описание заметки"
        android:inputType="textPersonName"
        android:gravity="top"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/update_note"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:backgroundTint="#DDC2A1"
            android:textColor="@color/black"
            android:text="ОБНОВИТЬ"
            android:layout_marginHorizontal="25dp"/>
        <Button
            android:id="@+id/delete_note"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:backgroundTint="#DDC2A1"
            android:textColor="@color/black"
            android:text="УДАЛИТЬ"
            android:layout_marginHorizontal="25dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>